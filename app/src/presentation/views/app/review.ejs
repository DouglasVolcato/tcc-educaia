<%- include('../partials/head', { title }) %>
  <body>
    <div class="d-flex flex-column min-vh-100">
      <%- include('../partials/navbar', { active: 'review', user, hideNavbar: false }) %>
      <main class="flex-grow-1">
        <div class="container d-flex flex-column gap-4">
          <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3">
            <div>
              <h1 class="h3 fw-bold mb-1">Sessão de revisão</h1>
              <p class="text-secondary mb-0">Baralho <strong><%= session.deckName %></strong> • Carta <%= session.cardNumber %> de <%= session.totalCards %></p>
            </div>
          </div>

          <section class="review-card p-4 p-md-5">
            <div class="d-flex flex-column gap-4">
              <header class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3">
                <div>
                  <span class="badge bg-primary-subtle text-primary pill mb-2">Revisão ativa</span>
                  <div class="d-flex flex-wrap gap-2 mb-2">
                    <% session.card.tags.forEach(function(tag) { %>
                      <span class="badge text-bg-light pill"><%= tag %></span>
                    <% }) %>
                  </div>
                  <h2 class="h4 fw-bold mb-1">Pergunta</h2>
                  <p class="card-question mb-0"><%= session.card.question %></p>
                </div>
                <div class="text-secondary text-lg-end">
                  <p class="mb-1"><i class="bi bi-clock me-1"></i> Próxima revisão em <%= session.card.dueIn %></p>
                </div>
              </header>

              <div class="border rounded-4 bg-body-tertiary p-4">
                <button
                  class="btn btn-primary"
                  type="button"
                  data-action="toggle-answer"
                  data-target="#review-answer"
                  aria-controls="review-answer"
                  aria-expanded="false"
                >
                  <span data-visible-label>
                    <i class="bi bi-eye me-2"></i> Revelar resposta
                  </span>
                  <span class="d-none" data-hidden-label>
                    <i class="bi bi-eye-slash me-2"></i> Ocultar resposta
                  </span>
                </button>
                <div id="review-answer" class="d-none mt-3">
                  <h3 class="h6 text-uppercase text-secondary">Resposta sugerida</h3>
                  <p class="mb-3"><%= session.card.answer %></p>
                </div>
              </div>

              <footer class="d-flex flex-column gap-3">
                <p class="text-secondary mb-0">Como foi essa carta? Escolha a opção que melhor representa sua experiência.</p>
                <div class="row g-3">
                  <div class="col-12 col-lg-4">
                    <button
                      class="btn btn-success w-100 py-3"
                      hx-post="/api/review/grade"
                      hx-vals='{ "difficulty": "easy", "cardId": "<%= session.card.id %>" }'
                      hx-target="#global-alert-container"
                      hx-swap="beforeend"
                      hx-on::after-request="if (event.detail.xhr?.status === 200) location.reload()"
                      <%= session.card.id ? '' : 'disabled' %>
                      data-loading-overlay="false"
                    >
                      <span class="fw-semibold">Foi fácil</span>
                      <span class="d-block text-white-50 small">Rever daqui a alguns dias</span>
                    </button>
                  </div>
                  <div class="col-12 col-lg-4">
                    <button
                      class="btn btn-warning w-100 py-3"
                      hx-post="/api/review/grade"
                      hx-vals='{ "difficulty": "medium", "cardId": "<%= session.card.id %>" }'
                      hx-target="#global-alert-container"
                      hx-swap="beforeend"
                      hx-on::after-request="if (event.detail.xhr?.status === 200) location.reload()"
                      <%= session.card.id ? '' : 'disabled' %>
                      data-loading-overlay="false"
                    >
                      <span class="fw-semibold">Foi ok</span>
                      <span class="d-block text-dark small">Rever amanhã</span>
                    </button>
                  </div>
                  <div class="col-12 col-lg-4">
                    <button
                      class="btn btn-danger w-100 py-3"
                      hx-post="/api/review/grade"
                      hx-vals='{ "difficulty": "hard", "cardId": "<%= session.card.id %>" }'
                      hx-target="#global-alert-container"
                      hx-swap="beforeend"
                      hx-on::after-request="if (event.detail.xhr?.status === 200) location.reload()"
                      <%= session.card.id ? '' : 'disabled' %>
                      data-loading-overlay="false"
                    >
                      <span class="fw-semibold">Foi difícil</span>
                      <span class="d-block text-white-50 small">Rever novamente hoje</span>
                    </button>
                  </div>
                </div>
              </footer>
            </div>
          </section>

          <section class="row g-4">
            <div class="col-lg-12">
              <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                  <h2 class="h6 text-uppercase text-secondary fw-semibold">Próximas cartas</h2>
                  <% if (nextReviews && nextReviews.length > 0) { %>
                    <ul class="list-group list-group-flush">
                      <% nextReviews.forEach(function(card) { %>
                        <li class="list-group-item px-0 d-flex justify-content-between align-items-center">
                          <span><%= card.question %></span>
                          <span class="badge text-bg-light"><%= card.dueIn %></span>
                        </li>
                      <% }) %>
                    </ul>
                  <% } else { %>
                    <p class="text-secondary mb-0">Nenhuma carta adicional pendente. Continue estudando para receber novas sugestões.</p>
                  <% } %>
                </div>
              </div>
            </div>
          </section>
        </div>
      </main>
      <%- include('../partials/footer') %>
    </div>
    <%- include('../partials/feedback') %>
  <%- include('../partials/scripts') %>
