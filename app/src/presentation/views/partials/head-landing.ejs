<!DOCTYPE html>
<html lang="pt-BR" data-bs-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="EducaIA - Domine seus estudos com a EducaIA" />
    <link rel="icon" type="image/x-icon" href="/static/icons/favicon.svg?v=<%= locals.staticVersion || 1 %>" />
    <title><%= title ? `${title} Â· ${locals.brand || 'EducaIA'}` : (locals.brand || 'EducaIA') %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
      integrity="sha384-zBQLhYoXkkpFmSPrbr30YIOCwVDDDeWGPA7eGRIDcN+xr3aMc2SGlu1qQE2BktdI"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/static/css/styles.css?v=<%= locals.staticVersion || 1 %>" />
    <script>
      (() => {
        const storageKey = "educaia-theme";
        try {
          const storedTheme = localStorage.getItem(storageKey);
          const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
          const theme = storedTheme || (prefersDark ? "dark" : "light");
          document.documentElement.setAttribute("data-bs-theme", theme);
        } catch (error) {
          document.documentElement.setAttribute("data-bs-theme", "light");
        }
      })();
    </script>
    <style>
      body {
        font-family: 'Inter', 'Segoe UI', system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
      }

      main {
        padding-block: 0;
      }

      .gradient-bg {
        background: radial-gradient(circle at top, rgba(13, 110, 253, 0.15), transparent),
          radial-gradient(circle at 20% 20%, rgba(32, 201, 151, 0.15), transparent),
          #f8f9fa;
      }

      :root[data-bs-theme='dark'] .gradient-bg {
        background: radial-gradient(circle at top, rgba(13, 110, 253, 0.06), transparent),
          radial-gradient(circle at 20% 20%, rgba(14, 165, 233, 0.06), transparent),
          #020617;
      }

      .feature-card:hover {
        box-shadow: 0 1.5rem 3rem rgba(13, 110, 253, 0.1);
        transform: translateY(-4px);
      }

      .letter-spacing-wide {
        letter-spacing: 0.2rem;
      }

      .text-white-75 {
        color: rgba(255, 255, 255, 0.75) !important;
      }

      .hero-intro {
        background: linear-gradient(120deg, #0d6efd, #5a67d8);
        padding: 6rem 0;
        display: flex;
        align-items: center;
      }

      :root[data-bs-theme='dark'] .hero-intro {
        background: linear-gradient(120deg, #0b1440, #312e81);
      }

      .hero-intro .badge {
        font-size: 0.85rem;
        letter-spacing: 0.08em;
      }

      .section-how {
        padding: 5rem 0 6rem;
      }

      @media (max-width: 992px) {
        .hero-intro {
          padding: 4rem 0;
          min-height: auto;
        }
      }
    </style>
    <script src="/static/js/htmx.min.js?v=<%= locals.staticVersion || 1 %>" defer></script>
  </head>
