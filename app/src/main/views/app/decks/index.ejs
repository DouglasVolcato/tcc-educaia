<%- include('../partials/layout-start', { pageTitle: 'Meus baralhos', user, activePage, bodyClass: 'bg-body-tertiary' }) %>
  <div class="container py-4">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center mb-4 gap-3">
      <div>
        <h1 class="h3 mb-1">Meus baralhos</h1>
        <p class="text-muted mb-0">Gerencie seus baralhos e acompanhe as revisões pendentes.</p>
      </div>
      <div class="d-flex gap-2">
        <button class="btn btn-outline-secondary" type="button" data-bs-toggle="offcanvas" data-bs-target="#deckFilters">
          <i class="bi bi-sliders me-1"></i>Filtros
        </button>
        <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#createDeckModal">
          <i class="bi bi-plus-circle me-1"></i>Novo baralho
        </button>
      </div>
    </div>
    <div class="row g-4">
      <div class="col-lg-4">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h2 class="h5 mb-0">Baralhos ativos</h2>
              <span class="badge text-bg-primary rounded-pill"><%= decks.length %></span>
            </div>
            <div class="list-group list-group-flush">
              <% decks.forEach(function(deck) { %>
                <button
                  class="list-group-item list-group-item-action d-flex justify-content-between align-items-start gap-3 <% if (selectedDeck && selectedDeck.id === deck.id) { %>active<% } %>"
                  type="button"
                  hx-get="/app/decks/<%= deck.id %>/preview"
                  hx-target="#deck-preview"
                  hx-swap="innerHTML"
                >
                  <div>
                    <h3 class="h6 mb-1"><%= deck.name %></h3>
                    <p class="mb-0 small text-muted"><%= deck.description %></p>
                    <div class="mt-2 d-flex flex-wrap gap-2">
                      <span class="badge text-bg-light"><i class="bi bi-book me-1"></i><%= deck.subject %></span>
                      <span class="badge text-bg-<%= deck.color %>"><i class="bi bi-lightbulb me-1"></i><%= deck.mastered %> dominados</span>
                    </div>
                  </div>
                  <div class="text-end">
                    <span class="badge rounded-pill text-bg-danger"><%= deck.dueToday %> revisar</span>
                    <small class="d-block text-muted mt-1">Último acesso: <%= deck.lastStudied %></small>
                  </div>
                </button>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div id="deck-preview">
          <%- include('./partials/preview', { deck: selectedDeck }) %>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="createDeckModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Criar novo baralho</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
        </div>
        <div class="modal-body">
          <form action="/app/decks" method="post" data-async>
            <div class="mb-3">
              <label class="form-label" for="deck-name">Nome do baralho</label>
              <input type="text" class="form-control" id="deck-name" name="name" placeholder="Ex.: Física Mecânica" required />
            </div>
            <div class="mb-3">
              <label class="form-label" for="deck-description">Descrição</label>
              <textarea class="form-control" id="deck-description" name="description" rows="2" placeholder="Conte um pouco sobre o que você pretende estudar"></textarea>
            </div>
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label" for="deck-subject">Disciplina</label>
                <input type="text" class="form-control" id="deck-subject" name="subject" placeholder="Matemática" />
              </div>
              <div class="col-md-6">
                <label class="form-label" for="deck-goal">Meta diária</label>
                <input type="number" class="form-control" id="deck-goal" name="dailyGoal" placeholder="Ex.: 20 cartões" />
              </div>
            </div>
            <div class="form-check mt-3">
              <input class="form-check-input" type="checkbox" value="true" id="deck-ai" name="aiAssist" checked />
              <label class="form-check-label" for="deck-ai">Ativar sugestões automáticas da IA para este baralho</label>
            </div>
            <div class="d-flex justify-content-end gap-2 mt-4">
              <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
              <button type="submit" class="btn btn-primary" data-loading-button>Criar baralho</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="offcanvas offcanvas-end" tabindex="-1" id="deckFilters" aria-labelledby="deckFiltersLabel">
    <div class="offcanvas-header">
      <h5 id="deckFiltersLabel">Filtrar baralhos</h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Fechar"></button>
    </div>
    <div class="offcanvas-body">
      <form>
        <div class="mb-3">
          <label class="form-label" for="filter-subject">Disciplina</label>
          <select id="filter-subject" class="form-select">
            <option value="">Todas</option>
            <% decks.forEach(function(deck) { %>
              <option value="<%= deck.subject %>"><%= deck.subject %></option>
            <% }) %>
          </select>
        </div>
        <div class="mb-3">
          <label class="form-label" for="filter-status">Status</label>
          <select id="filter-status" class="form-select">
            <option value="all">Todos</option>
            <option value="due">Com revisões hoje</option>
            <option value="mastered">Quase concluídos</option>
          </select>
        </div>
        <button type="button" class="btn btn-primary w-100">Aplicar filtros (mock)</button>
      </form>
    </div>
  </div>
<%- include('../partials/layout-end') %>
